{% extends 'base.html.twig' %}

{% block body %}

<section>
    <div class="container showveille">
        <div class="col-xs-12">
                <h1>Veille</h1>

                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ veille.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ veille.title }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ veille.image }}</td>
                        </tr>
                        <tr>
                            <th>Url</th>
                            <td>{{ veille.url }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ veille.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('veille_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('veille_edit', { 'id': veille.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
        </div>
    </div>
</section>
{% endblock %}
